<main>
  <div class="list">
    <div class="post_details">
      <div class="post_details_title">
        <h3><%= @post.title %> , by <%= @user.name %></h3>
        <h4><span>Comment <%= @post.comments_count %></span> <span>|</span> <span>Likes <%= @post.likes_count %></span></h4>
      </div>

      <div class="post_details_text">
        <p><%= @post.text %></p>
      </div>
      <hr>
      <div class="user_comments">
        <% if @comments.length == 0 %>
          <p>No comments for now. Be the first to comment</p>
        <% else %>
          <% @comments.each do |comment| %>
            <p><%= comment.author.name%>: <%= comment.text%></p>
          <%end%>
        <% end %>
      </div>
    </div>
    <div class="btn_bottom">
      <%= link_to "Back to posts", user_posts_path(@user), class: "btn_all_posts" %>
    </div>
  </div>
</main> 
